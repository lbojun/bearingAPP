/* miniprogram/pages/experience/SMOTE/SMOTE.wxss */
.container {
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0.6;
  z-index: -1;
}
.container image{
  width: 100%;
  height: 100%;
}

.titleContainer {
  margin: 20px auto;
  font-size: 16px;
}

.input-container {
  margin: 10px auto;
  width: 90%;
  border: 1px black solid;
  border-radius: 5px;
  background-color: rgba(255, 255, 255, 0.5);
}
.input-item {
  display: flex;
  flex-direction: row;
  width: 90%;
  margin: 10px auto;
}
.input-container .input {
  width: 7em;
  border: 1px black solid;
  text-align: center;
  border-radius: 10px;
  background-color: rgba(255, 255, 255, 0.5);

}
.input-container .btn{
  margin: 15px auto;
  background-color: white;
  border-radius: 10px;
  width: 7em;
}

.result{
  text-align: center;
  margin: 50px auto;
  width: 100%;
  
}
.result .res{
  margin: 50px auto;
  width: 90%;
  height: 100px;
  border: 1px black solid;
  border-radius: 10px;
  background-color: rgba(255, 255, 255, 0.5);

}


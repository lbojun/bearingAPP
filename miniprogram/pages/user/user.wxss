/* miniprogram/pages/user/user.wxss */
.bg {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
  opacity: 0.5;
}

.userinfo {
  display: flex;
  height: 220rpx;
}


.updown-image {
  width: 150rpx;
  height: 150rpx;
  margin: 0rpx 20px;
  text-align: center;
}

.personal-img {
  width: 150rpx;
  height: 150rpx;
  margin: 0 auto;
}

.personal-img image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  box-shadow: 0px 2rpx 8rpx 0rpx rgba(150, 150, 150, 0.6);
}

.personal-text {
  display: inline-block;
  font-size: 20rpx;
  font-weight: bold;
  color: rgba(50, 50, 50, 1);
  margin-top: 36rpx;
  width: 170rpx;

}

.userinfo .username {
  margin-left: 20px;
  font-size: 17px;
}

.add{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 100rpx;
}
.team,
.suggestion,
.tools {
  height: 100rpx;
  width: 100%;
  line-height: 100rpx;
  border-bottom: 0.5px solid rgba(0, 0, 0, 0.2);
  background-color: rgba(255, 255, 255, 0.4);
}
.team text, 
.suggestion text,
.tools text{
  margin-left: 20px;
}
.arrow{
  width: 14px;
  height: 14px;
  float: right;
  margin-right: 25px;
  margin-top: 23.5px;
}

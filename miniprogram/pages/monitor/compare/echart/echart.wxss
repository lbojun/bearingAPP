/* miniprogram/pages/monitor/compare/echart/echart.wxss */
.bg {
  height: 100%;
  position: absolute;
  width: 100%;
  left: 0px;
  top: 0px;
  z-index: -1;
  opacity: 0.3;
}

.section {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  text-align: center;
  margin: 20px auto;
  font-size: 20px
}

.echart-container {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 80%;
  margin: 0 auto;
}

.return{
  position: absolute;
  top: 80px;
  right: 10px;
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 10rpx;
  text-align: center;
  background: #337ab7;
  color:#fff;
  margin:auto;
}

ec-canvas {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 100%;
}
.info{
  margin-left: 50rpx;
}
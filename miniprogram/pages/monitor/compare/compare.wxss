/* miniprogram/pages/monitor/functions/compare/compare.wxss */
page {
  overflow: hidden;
}

.bg {
  height: 100%;
  position: absolute;
  width: 100%;
  left: 0px;
  top: 0px;
  z-index: -1;
  opacity: 0.3;
}

.section {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  text-align: center;
  margin: 10px auto;
  font-size: 20px
}



.echart-container {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 100%;
  margin: 0 auto;
}

ec-canvas {
  position: absolute;
  bottom: 50rpx;
  width: 100%;
  height: 100%;
}
.gkContentBox:last-child {
  border: none;
}

.gkContent {
  width: 25%;
  font-size:15px;
  text-align: center;
}
scroll-view {
  border-top: 1px solid black;
  border-bottom: 1px solid black;
}

.gkContentBox {
  font-size: 18px;
  display: flex;
  width: 100%;
  height: 30px;
  line-height: 30px;
  border-bottom: 1px black solid;
  align-items: center;
}
.gkTitle {
  font-size: 15px;
  width: 25%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  font-weight: bold;
  color: rgba(0, 0, 0, 0.9);
}
.chart{
  margin: 10px 5px;
  border: 1px black solid;
}
button {
  position: absolute;
  bottom: 30rpx;
  right: 10rpx;
  margin-top: 40rpx;
  background: linear-gradient(to right, #ead6ee, #a0f1ea);
  border-radius: 15px;
}
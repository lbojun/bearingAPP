/* pages/feature/feature.wxss */
.bg {
  height: 100%;
  position: absolute;
  width: 220%;
  left: 0px;
  top: 0px;
  z-index: -1;
  opacity: 0.7;
}

.titleContainer {
  margin: 50px auto;
}

.big-title {
  font-size: 20px;
}

.input-container {
  width: 95%;
  height: 220px;
  margin: 0 auto;
  background-color: rgba(255, 255, 255, 0.4);
  border: 1px #000 solid;
  border-radius: 15px;
}

.input-container .algo-title {
  display: flex;
  justify-content: center;
  margin: 10px auto;
}

.input-container .line {
  width: 90%;
  height: 1px;
  background-color: rgba(0, 0, 0, 0.2);
  margin: 10px auto;
}

.input-container picker {
  margin-left: 80rpx;
  margin-top: 20rpx;
}
.input-container .text{
  display: flex;
  flex-direction: column;
  align-items: center;
}

button {
  margin-top: 40rpx;
  background: linear-gradient(to right, #ead6ee, #a0f1ea);
  border-radius: 15px;
}
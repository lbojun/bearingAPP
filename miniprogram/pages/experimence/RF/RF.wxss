/* pages/feature/feature.wxss */
.bg {
  height: 100%;
  position: absolute;
  width: 220%;
  left: 0px;
  top: 0px;
  z-index: -1;
  opacity: 0.7;
}

.titleContainer {
  margin: 50px auto;
}

.big-title {
  font-size: 20px;
}

.input-container {
  width: 95%;
  height: 300px;
  margin: 0 auto;
  background-color: rgba(255, 255, 255, 0.6);
  border: 1px #000 solid;
  border-radius: 15px;
}


.input-container .line {
  width: 90%;
  height: 1px;
  background-color: rgba(0, 0, 0, 0.2);
  margin: 10px auto;
}

.input-container image {
  width: 400rpx;
  height: 400rpx;
  margin-left: 150rpx;
  
}

.input-container .input-item input {
  background-color: rgba(223, 180, 175, 0.781);
  border: 0.5px solid rgb(90, 58, 58);
  border-radius: 10px;
  text-align: center;
  width: 40%;
}

button {
  margin-top: 40rpx;
  background: linear-gradient(to right, #ead6ee, #a0f1ea);
  border-radius: 15px;
}